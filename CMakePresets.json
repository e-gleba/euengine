{
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 9,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Base Configuration",
      "description": "Base preset containing common project configurations and settings",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "clang",
      "displayName": "LLVM Clang",
      "description": "Clang toolchain configuration with modern C++ standards and optimizations",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "llvm-mingw-base",
      "displayName": "LLVM-MinGW Base",
      "description": "Base configuration for LLVM-MinGW cross-compilation",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Windows",
        "CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "NEVER",
        "CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": "ONLY",
        "CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY",
        "CMAKE_FIND_ROOT_PATH_MODE_PACKAGE": "ONLY"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "llvm-mingw-x86_64",
      "displayName": "LLVM-MinGW Win64 (x86_64)",
      "description": "Cross-compile for Windows 64-bit using LLVM-MinGW toolchain",
      "inherits": "llvm-mingw-base",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "x86_64",
        "CMAKE_C_COMPILER": "${sourceDir}/llvm-mingw/bin/x86_64-w64-mingw32-clang",
        "CMAKE_CXX_COMPILER": "${sourceDir}/llvm-mingw/bin/x86_64-w64-mingw32-clang++",
        "CMAKE_RC_COMPILER": "${sourceDir}/llvm-mingw/bin/llvm-windres",
        "CMAKE_AR": "${sourceDir}/llvm-mingw/bin/llvm-ar",
        "CMAKE_RANLIB": "${sourceDir}/llvm-mingw/bin/llvm-ranlib"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "clang",
      "displayName": "Clang Build",
      "configurePreset": "clang",
      "configuration": "Release"
    },
    {
      "name": "llvm-mingw-x86_64",
      "displayName": "LLVM-MinGW Win64 Build",
      "configurePreset": "llvm-mingw-x86_64",
      "configuration": "Release",
      "jobs": 1
    }
  ],
  "testPresets": [
    {
      "name": "llvm-mingw-x86_64",
      "displayName": "LLVM-MinGW Win64 Tests",
      "configurePreset": "llvm-mingw-x86_64",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true,
        "verbosity": "default"
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    }
  ],
  "packagePresets": [
    {
      "name": "llvm-mingw-x86_64-package",
      "displayName": "LLVM-MinGW Win64 Package",
      "configurePreset": "llvm-mingw-x86_64",
      "generators": ["TXZ"]
    }
  ],
  "workflowPresets": [
    {
      "name": "llvm-mingw-x86_64-full",
      "displayName": "LLVM-MinGW Win64 Complete Pipeline",
      "description": "Full cross-compilation workflow for Windows 64-bit",
      "steps": [
        {
          "type": "configure",
          "name": "llvm-mingw-x86_64"
        },
        {
          "type": "build",
          "name": "llvm-mingw-x86_64"
        },
        {
          "type": "test",
          "name": "llvm-mingw-x86_64"
        },
        {
          "type": "package",
          "name": "llvm-mingw-x86_64-package"
        }
      ]
    }
  ]
}
